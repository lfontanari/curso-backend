<div>
  <div>
    <button type="button" class="btn" onclick="logout()"> Logout</button>
     
  </div>
  <div>
    <h1>Bienvenido! Este es tu perfil </h1>
    <p>Nombre: {{user.name}}</p>
    <p>Email: {{user.email}}</p>
    <p>Edad: {{user.age}}</p>
    <p>Rol: {{user.rol}}</p>
</div>
 <hr />
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Title </th>
        <th scope="col"> Description </th>
        <th scope="col"> Code </th>
        <th scope="col"> Price </th>
        <th scope="col"> Category </th>

      </tr>
    </thead>
    <tbody>
      {{#each productos.docs}}
        <tr>
          <td> {{this.title}}</td>
          <td> {{this.description}}</td>
          <td> {{this.code}}</td>
          <td> {{this.price}} </td>
          <td> {{this.category}}</td>
          <td><button onclick="addItem({{@index}})">Agregar a carrito</button></td>
        </tr>
      {{/each}}

    </tbody>

  </table>
      {{#if productos.prevPage}}
  <button> <a href="/?page={{productos.prevPage}}">Anterior</a></button>
  {{/if}}
    {{#if productos.nextPage}}
  <button> <a href="/?page={{productos.nextPage}}">Siguiente</a></button>
  {{/if}}
  </div>
  
  <script src="/js/main.js">
 
  
  </script>
</div>
